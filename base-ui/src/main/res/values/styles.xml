<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textViewStyle">@style/DpTextView</item>
        <item name="android:buttonStyle">@style/DpButton</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_blue</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/bright_blue</item>
    </style>

    <style name="DpToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/blue</item>
        <item name="android:navigationIcon">@drawable/ic_backbutton</item>
    </style>

    <style name="Toolbar.Button.Navigation" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:width">24dp</item>
        <item name="android:height">24dp</item>
    </style>

    <style name="DpToolBarTitle">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/serial_medium</item>
    </style>

    <style name="DpTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/nova_regular</item>
    </style>

    <style name="DpButton">
        <item name="android:background">@drawable/dp_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nova_semibold</item>
    </style>

    <style name="DpTextInputLayout.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="DpTextInputEditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/nova_regular</item>
    </style>

    <style name="CardRoundedCorner">
        <item name="android:background">@drawable/card_rounded_corner</item>
        <item name="android:layout_marginTop">@dimen/card_rounded_corner_margin</item>
        <item name="android:layout_marginStart">@dimen/card_rounded_corner_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_rounded_corner_margin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginTextInputLayoutError">
        <item name="android:fontFamily">@font/nova_regular</item>
        <item name="android:textColor">@color/error_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInputLayout.Hint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Dialog.Ok" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/nova_semibold</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:windowTitleStyle">@style/DialogTitleText</item>
    </style>

    <style name="DatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:colorControlNormal">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="DialogTitleText" parent="H2BoldGold" />

    <style name="Dialog.Loading" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="H2BoldGold">
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:fontFamily">@font/nova_bold</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>
</resources>
